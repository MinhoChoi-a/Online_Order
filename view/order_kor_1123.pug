        .dessert_modal_content 
          button.nav_all(type='button') All
          button.nav_cake(type="button") Cake
          button.nav_dacq(type="button") Dacquoise

      .cake_size_modal
        .cake_size_modal_content(value='')
          button(value="" class="xIcon" onclick="xButton_cake_taste()") Close 
          p#kor 아래 옵션을 선택해주세요
          div(id="cake_size_op")
          div(id="cake_taste")
          div(id="cake_message")
          button(id="apply" type="button" value='' onclick="cakeOption(this.parentElement.value)") Apply
          
      
      .dacq_set_modal
        .dacq_set_modal_content(value='')
          button(value="" class="xIcon" onclick="xButton_taste()") Close 
          div.taste_info(value='')
            p#kor 원하시는 맛을 골라 10개 골라 주세요
            div(id="tastes")
            div(id="taste_message")
            button(id="apply" type="button" value='' onclick="tasteValue(this.parentElement.value)") Apply

