    section.third
      .bunny_icon_small
        <img src="/img/logo_circle.png">
      
      form(action="")
        ul(class="customer_form")
          li(class="question")
            label(for="cust_name") Name
          li(class="answer")
            input(type="text" id="cust_name" name="name")
          li(class="question")
            label(for="cust_name") Name on E-transfer
          li(class="answer")
            input(type="text" id="etrans_name" name="etrans_name")
          li(class="question")
            label(for="insta") Instagram ID or Email
          li(class="answer")
            input(type="text" id="insta" name="insta") 
          li(class="question")
            label(for="phone") Phone Number
          li(class="answer")
            input(type="text" id="phone" name="phone")
          li(class="question")
            label(for="allergy") Any food allergies?
          li(class="answer")
            input(type="text" id="allergy" name="allergy")
          li(class="question")
            label(for="etc") Any other inquiries?
          li(class="answer")
            input(type="text" id="etc" name="etc")
        ul(class="cake_lettering")    
        ul
          li(class="question")
            | Select Pickup/Delivery Option
          li(id="radio")
            label
              input(type='radio' id='pick' name='pickup' value='pick-up')
              span Pick Up
            label
              input(type='radio' id='delivery' name='pickup' value='delivery')
              span Delivery
          li.delivery_option_info            
          
      .delivery_option_modal
        .delivery_option_content
          button(value="" class="xIcon" onclick="xButton()") Close          
          
          div.pickup_info
            div.pickup_address
            div.pickup_location            
            div.pickup_selection
            div.pickup_specific
              p Please put specific minute for pikcup(any number between 0 - 59)
              input(type="number" max="59" id= 'specific_pick' name='specific_pick')               
            div.pickup_err
            button(id="apply" type="button" value='' onclick="pickup_apply()") Apply
          
          div.delivery_info
            p Delviery service will be placed between 1 to 4 PM on Saturday. The specific time will be noticed with the confirmation of order.
            label(for='address') Please put your Postal Code
            input(type='text' id= 'postal' name='address')
            button(type='button' id="address_check") Check address
            div(id="delivery_fee")
            div(id="delivery_specific")
              p Please put specific address to make a correct delivery service.(ex. 000 0st SW)
              input(type='text' id='specific_address' name='specific_address')               
            div.delivery_err
            button(id="apply" type="button" value='' onclick="delivery_apply()") Apply
              
