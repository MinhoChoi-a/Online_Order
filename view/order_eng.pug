    section.second
      .alret_modal
        .alret_content 
          h1 Before Select
          p Menu items may contain or come into contact with eggs, peanuts, treenuts, and milk.
          p Please let us know if you have any food allergies or restrictions when you place on order.
          p If you read all, tap here :)

      .total_check
      .item__list
        .dacq_list
        .cake_list

      button.dessert_nav_modal_button(type="button")
        .icon MENU

      .dessert_nav_modal
        .dessert_modal_content 
          button.nav_all(type='button') All
          button.nav_cake(type="button") Cake
          button.nav_dacq(type="button") Dacquoise

      .cake_size_modal
        .cake_size_modal_content(value='') 
          button(type="button" value=1 onclick="sizeValue(this.value, this.parentElement.value)") 6 inch
          button(type="button" value=1.2 onclick="sizeValue(this.value, this.parentElement.value)") 8 inch
      
      .hidden_block 
      
      .nav
        a(href='/order/eng')
          button#prev__schedule Previous
        button#next_customer Next
      
      

    section.third
      .bunny_icon_small
        <img src="/img/logo_circle.png">
      
      form(action="")
        ul
          li(class="question")
            label(for="cust_name") Name
          li(class="answer")
            input(type="text" id="cust_name" name="name")
          li(class="question")
            label(for="insta") Instagram ID or Email
          li(class="answer")
            input(type="text" id="insta" name="insta") 
          li(class="question")
            label(for="phone") Phone Number
          li(class="answer")
            input(type="text" id="phone" name="phone")
          li(class="question")
            label(for="allergy") Any food allergies?
          li(class="answer")
            input(type="text" id="allergy" name="allergy")
          li(class="question")
            | Select Delviery
            div.time
              p - Pickup is avaiable between 3 to 8 PM
              p - Delivery is avaialble between 5 to 7 PM
          li(id="radio")
            label
              input(type='radio' id='pick' name='pickup' value='pick-up')
              span Pick Up
            label
              input(type='radio' id='delivery' name='pickup' value='delivery')
              span Delivery
          li.pickup_info            
          li.delivery_info
            label(for='address') Put your Postal Code
            input(type='text' id= 'postal' name='address')
            button(type='button' id="address_check") Check address
            div(id="delivery_fee")               
            div(id="delivery_free") 
              p free delivery service
            div(id="delivery_error")
              p please put the right postal code   

      .hidden_block 

      .nav
        button#prev__items Previous
        button#next_check Check Out
    
    section.fourth
      .bunny_icon_small
        <img src="/img/logo_circle.png">

      h1 Request
      p if you want to change something, you can go to the prior menu with previous button

      form(method='POST' action="")
        div(class='form-group')
          table.confirmation_customer
          table.confirmation_order
        
        .nav
          button(type="button")#prev__customer Previous
          button(type="submit" onsubmit="return onSubmit()")#next_check Request

      .hidden_block
      
