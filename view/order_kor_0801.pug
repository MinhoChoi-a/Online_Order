      .cake_size_modal
        .cake_size_modal_content(value='')
          button(value="" class="xIcon" onclick="xButton_cake_taste()" style="font-size:13px") Close 
          p#kor 아래 옵션을 선택해주세요
          div(id="cake_size_op")
          div(id="cake_taste")
          div(id="cake_message")
